<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#e5ffe5"
tools:context="esposito.nicholas.recyclingapp.GameActivity">

<ImageView
    android:layout_width="200dp"
    android:layout_height="120dp"
    android:scaleType="centerCrop"
    android:id="@+id/greenBasketImg"
    android:src="@drawable/greenbin"
    android:layout_above="@+id/organicBasketImg"
    android:layout_toLeftOf="@+id/cardboardBag"
    android:layout_toStartOf="@+id/cardboardBag"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="15dp"/>

<ImageView
    android:layout_width="180dp"
    android:layout_height="160dp"
    android:id="@+id/organicBasketImg"
    android:src="@drawable/blackbin"
    android:scaleType="centerInside"
    android:paddingBottom="20dp"
    android:layout_marginLeft="-10dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<ImageView
    android:layout_width="180dp"
    android:layout_height="160dp"
    android:scaleType="centerInside"
    android:id="@+id/cardboardBag"
    android:src="@drawable/bluebag"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:paddingBottom="20dp"
    android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/trashObject"
        android:src="@drawable/banana"
        android:layout_above="@+id/greenBasketImg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

<ImageView
    android:layout_width="180dp"
    android:layout_height="160dp"
    android:paddingBottom="20dp"
    android:scaleType="centerInside"
    android:id="@+id/TrashImg"
    android:src="@drawable/trash"
    android:layout_below="@id/trashObject"
    android:layout_toRightOf="@+id/organicBasketImg"
    android:layout_toEndOf="@+id/organicBasketImg"
    android:paddingLeft="-20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/okview"
        android:layout_below="@id/trashObject"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Score: 0"
    android:textColor="#000000"
    android:id="@+id/ScoreView"
    android:layout_alignParentTop="true"
   android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:textSize="20dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/backArrow"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Timer: 30"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/timerView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/ScoreView"/>
</RelativeLayout>
